<%= filepicker_js_include_tag %>
<h1 id="user-heading">Edit Post</h1>
<div class="formFormat" style="padding:5px 20px">
  <%= form_for(@post) do |f| %>
      <div class="row">
        <div class="large-12 columns" style="margin-left: auto; margin-right: auto;">
              <label>Title</label>
              <%= f.text_field :title %>
         </div>
       </div>
       
        <% if @post.errors[:title].any? %>
         <small class="error-message small-9 error">
            <%= @post.errors[:title].join(", ") %>
         </small>
        <% end %> 
      <div class="row">
         <div class="large-12 columns" style="margin-left: auto; margin-right: auto;">
            <%= f.hidden_field :user_id, :value =>current_user.id%>
        </div>
      </div>
      <div class="row dropdown">
         <div class="large-12 columns" style="margin-left: auto; margin-right: auto;">
            <label>Date</label>
            <%= f.date_select :date %>
        </div>
      </div>
      <br>
      <div class="row">
           <div class="large-12 columns" style="margin-left: auto; margin-right: auto;">
               <%= f.label :filepicker_url, "Upload A Picture:" %>
               <%= f.filepicker_field :filepicker_url, dragdrop: true %>
          </div>
      </div>
      <br>
      <div class="row">
         <div class="large-12 columns" style="margin-left: auto; margin-right: auto;">
            <label>Body Text</label>
            <%= f.text_area(:body, :size => "120x20")%>
        </div>
      </div>
      <% if @post.errors[:body].any? %>
         <small class="error-message small-9 error">
            <%= @post.errors[:body].join(", ") %>
         </small>
        <% end %> 
    <br>
    <div class="row">
      <div>
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>
