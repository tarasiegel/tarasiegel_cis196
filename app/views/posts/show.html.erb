<div class="post-style">
  <h1 class="post-header"><%= @post.title %></h1>
  <div class="post-date">
  	<span class="success radius label"><%= @post.user.name %></span>
  	<span class="secondary radius label"><%= @post.date %></span>
  </div>
  <div><% if !@post.filepicker_url.nil? %>
  	<%= filepicker_image_tag @post.filepicker_url, h: 300, fit: 'clip' %>
  <% end %></div>

  <p class="post-body"><%= @post.body %></p>

<%= tag("div", class: "fb-comments", data: { href: "http://tara-siegel-blog.herokuapp.com/posts/"+ @post.id.to_s, colorscheme: "light", numposts: "5" } ) %>


</div>
