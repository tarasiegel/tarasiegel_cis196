<h1>Posts!</h1>
<table>
	<tr>
		<td>Title</td> 
		<td>User</td>
		<td>Date</td>
		<td>Body</td>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= post.user_id %></td>
		<td><%= post.date %></td>
		<td><%= post.body %></td>
		<td><%= button_to "destroy post", post_path(post), confirmation: "you sure?", method: :delete %> </td>
 		<td><%= link_to "show post", post_path(post.id) %></td>
 		<td><%= link_to "edit post", edit_post_path(post.id) %></td>
	</tr>
<% end %>
</table>
